---
// import Layout from "../layouts/Layout.astro"
import Layout from "../layouts/NextflixLayout.astro"
import { Button } from "@/components/ui/button"
import Faq from "@/components/Faq.astro"
---

<Layout>
    <main>
        <!-- Hero Section Starts -->
        <section
            class="w-full md:h-[85vh] lg:mb-5 h-[70vh] bg-[url('IN-en-20240722-POP_SIGNUP_TWO_WEEKS-perspective_WEB_3457a8b1-284d-4bb5-979e-2a2e9bb342b3_large.jpg')] bg-center bg-cover"
        >
            <div class="bg-opacity-70 w-full h-screen bg-black">
                <header class="max-w-[1120px] mx-auto">
                    <div class="p-7 grid items-center grid-cols-2">
