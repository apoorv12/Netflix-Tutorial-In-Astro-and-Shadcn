                            <svg
                                viewBox="0 0 111 30"
                                version="1.1"
                                xmlns="http://www.w3.org/2000/svg"
                                xmlns:xlink="http://www.w3.org/1999/xlink"
                                aria-hidden="true"
                                role="img"
                                class="w-28 lg:w-36 text-red-600"
                            >
